{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "shared": ["../shared/types.ts"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../shared" }]
}
